@page "{id:Guid}"
@model WebAppBootstrap.Pages.ItemModel
@{
    var defaultImage = "/imgs/items/default-image.png";
    var imageUrl = Model.Item!.ImageUrl ?? defaultImage;

    //if (Model.Item!.ImageUrl == null)
    //{
