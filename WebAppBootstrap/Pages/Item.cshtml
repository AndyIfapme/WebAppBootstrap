}


@if (Model.Item is null /* == null */)
{
    <p>Cette article n'est plus disponible.</p>
}
else
{
    <div class="d-flex">
        <div class="p-2 flex-grow-1">
            <p class="h1">@Model.Item.Name</p>
            <p>@Model.Item.Description</p>
            <p>@Model.Item.BrandName</p>

            <img src="@imageUrl" alt="" loading="lazy">
        </div>
        <div class="p-2">
            <span class="badge rounded-pill text-bg-primary">@Model.Item.Price €</span>

        </div>
    </div>
}