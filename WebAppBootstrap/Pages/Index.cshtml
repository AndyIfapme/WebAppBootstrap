@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="row">
        @foreach (var item in Model.Items)
        {
            <div class="col-xs-12 col-md-6 col-lg-3 col-xl-2 mt-2">
                <a asp-page="./Item" asp-route-id="@item.ItemId" class="nav-link">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title text-center">@item.Name</h5>
                            <p class="card-text text-center">@item.BrandName</p>

                            <p class="card-text text-center">@item.Price €</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>